{
  "name": "polling-app",
  "version": "1.0.0",
  "description": "Real-time polling application with Socket.IO",
  "main": "server/server.js",
  "scripts": {
    "start": "cd server && npm start",
    "start:prod": "cd server && set NODE_ENV=production && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build-client": "cd client && npm run build",
    "build": "npm run install-all && npm run build-client",
    "railway-start": "npm run build && npm start"
  },
  "keywords": ["polling", "real-time", "socket.io", "react", "express"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
